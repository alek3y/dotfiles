# This is ale's ~/.nanorc (for +5.5)

include /usr/local/share/nano/*.nanorc

set errorcolor bold,white,latte
set functioncolor italic,white
set keycolor bold,latte
set numbercolor bold,black
set promptcolor bold,white,latte
set scrollercolor black
set selectedcolor lightwhite,latte
set statuscolor bold,latte
set titlecolor bold,white,black

set afterends
set atblanks
set autoindent
set casesensitive
set historylog
set indicator
set linenumbers
set locking
set markmatch
#set mouse
set multibuffer
#set nohelp
#set nonewlines
set positionlog
set regexp
set smarthome
set softwrap
#set suspendable		# FIXME: ^z should be rebinded to undo
set tabsize 2
set zap
#set mouse		# Useful on smartphones
